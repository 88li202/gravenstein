<%= div_row_tag(class: %w(form-group)) do %>
  <%= label_tag(:user_email, class: %w(col-3 col-form-label text-right)){ t('user.email') } %>
  <%= div_col_xs_6_tag(){ input_tag(id: :user_email, name: 'user[email]', type: :text, class: %w(form-control), value: form.object.email){} } %>
<% end %>

